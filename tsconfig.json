{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ES2022",
      "outDir": "dist",
      "strict": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "rootDir": "src",
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": [
      "src/**/*",
    ],
    "exclude": ["node_modules", "dist"]
  }
  